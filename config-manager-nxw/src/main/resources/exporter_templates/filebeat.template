sudo dpkg -i /tmp/filebeat-7.5.0-amd64.deb
rm /tmp/filebeat-7.5.0-amd64.deb
sudo systemctl stop filebeat
sudo mkdir -p /etc/filebeat
cat << EOF > /etc/filebeat/filebeat.yml
